  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.3.0",
    "cssnano": "^5.1.12",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.7.2"
  },
  "browserslist": [
    "defaults"
  ]
